<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Umg_moto_xpress_android" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorSecondary">@color/secondGreen</item>
        <item name="colorPrimaryDark">@color/primaryDarkBlue</item>
        <item name="colorAccent">@color/primaryGreen</item>
        <item name="android:textSize">12dp</item>
        <item name="android:windowBackground">@color/primaryDarkBlue</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>

        <item name="android:radioButtonStyle">@style/CustomRadioButton</item>
    </style>

    <style name="Theme.Umg_moto_xpress_android" parent="Base.Theme.Umg_moto_xpress_android" />


    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/primaryDarkBlack
        </item> <!-- Cambia el color del texto -->
        <item name="android:textSize">16sp</item>                <!-- Cambia el tamaño del texto -->
        <item name="android:button">@drawable/radio_button_animated</item> <!-- Cambia el botón -->
        <item name="android:padding">8dp</item>                   <!-- Agrega padding -->
    </style>

    <declare-styleable name="CustomAttributesSpinner">
        <attr name="textTitleHide" format="string"/>
        <attr name="colorTextTitleSelect" format="integer"/>
        <attr name="colorTextTitle" format="integer"/>
        <attr name="colorTextItemOption" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CustomAttributesItemBiker">
        <attr name="textTitle" format="string"/>
        <attr name="titleMessageEmpty" format="string"/>
        <attr name="descriptionMessageEmpty" format="string"/>
        <attr name="imageMessageEmpty" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CustomAttributesDetails">
        <attr name="textDesProfile" format="string"/>
        <attr name="titleProfile" format="string"/>
        <attr name="drawImageProfile" format="reference|color"/>
        <attr name="isImageViewProfile" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CustomAttributesInputs">
        <attr name="textTitleInput" format="string"/>
        <attr name="textHidTitleInput" format="string"/>
        <attr name="maxLengthInput" format="integer"/>
        <attr name="drawImage" format="reference|color"/>
        <attr name="isImageView" format="boolean"/>
        <attr name="inputType">
            <flag name="none" value="0x00000000" />
            <flag name="text" value="0x00000001"/>
            <flag name="textCapCharacters" value="0x00001001"/>
            <flag name="textCapWords" value="0x00002001"/>
            <flag name="textMultiLine" value="0x00020001"/>
            <flag name="textPassword" value="0x00000081"/>
            <flag name="number" value="0x00000002"/>
            <flag name="numberSigned" value="0x00001002"/>
            <flag name="numberDecimal" value="0x00002002"/>
            <flag name="phone" value="0x00000003"/>
            <flag name="datetime" value="0x00000004"/>
            <flag name="date" value="0x00000014"/>
            <flag name="time" value="0x00000024"/>
            <flag name="textAutoComplete" value="0x00010001"/>
        </attr>

    </declare-styleable>

    <style name="NewIconInput" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

    </style>
</resources>